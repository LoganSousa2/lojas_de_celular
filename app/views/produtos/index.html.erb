<div class="categdespesas index">
      <h2>Produtos</h2>
      <%= link_to "RelatÃ³rio ", relatorio_produtos_path(format: 'pdf'), :target => "_blank", :class => "btn btn-primary colorprimarybtn" %>
    
      <%= form_tag produtos_path( format:"html"), :method => 'get' do %> 

      <div class="row">
            <div class="col-lg-5  form-group">  
                <%= text_field_tag :nome, params[:nome], :class => 'form-control', :placeholder=>"Digite o nome do produtos para pesquisar" %>  
              </div>
              <div class="col-lg-2 form-group">
                <%= submit_tag "Pesquisar", :class => "btn btn-primary colorprimarybtn" %>
              </div>

           <div class="col-lg-2 form-group">  
                  <span class="input-group-btn" style="display: inline-block;"><button class="btn btn-primary colorprimarybtn" type="button" onclick="javascript: location.href='<%= new_produto_path %>';"><i class="fa fa-plus-circle"></i> Novo Produto</button></span>
            </div>
        </div>
      </div>
      <%end%>
    </div>
    <div class="table-responsive">
    <table class="table table-hover table-striped" cellpadding="0" cellspacing="0">
        <thead>
        <tr>
        <th>COD</th>
        <th>Nome</th>
        <th>Descricao</th>
        <th>Preco</th>
        <th colspan="4"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @produtos.each do |produto| %>
        <tr>
          <td><%= "%06d"%produto.id %></td>
          <td><%= produto.nome %></td>
          <td><%= produto.descricao%></td>
          <td><%= produto.preco %></td>
          <td><%= link_to 'Visualizar', produto %></td>
          <td><%= link_to 'Alterar', edit_produto_path(produto) %></td>   
          <td><%= link_to 'Excluir', produto, method: :delete,remote: true, class: 'remove-tag', data: { confirm: 'Deseja excluir o produto?' } %></td>
        </tr>
      <% end %>
        </tbody>
    </table>
  </div>
 
  </div>
