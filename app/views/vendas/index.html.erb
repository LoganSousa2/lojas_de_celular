<div class="categdespesas index">
      <h2>Vendas</h2>
    <%= form_tag vendas_path( format:"html"), :method => 'get' do %>  
      <div class="row">
            <div class="col-lg-5  form-group">  
                <%= text_field_tag :nome, params[:nome], :class => 'form-control', :placeholder=>"Digite o nome vendas para pesquisar" %>  
              </div>
              <div class="col-lg-2 form-group">
                <%= submit_tag "Pesquisar", :class => "btn btn-primary colorprimarybtn" %>
              </div>

           <div class="col-lg-2 form-group">  
                  <span class="input-group-btn" style="display: inline-block;"><button class="btn btn-primary colorprimarybtn" type="button" onclick="javascript: location.href='<%= new_venda_path %>';"><i class="fa fa-plus-circle"></i> Novo Venda</button></span>
            </div>
        </div>
      </div>
      <%end%>
    </div>
    <div class="table-responsive">
    <table class="table table-hover table-striped" cellpadding="0" cellspacing="0">
        <thead>
        <tr>
        <th>Valor</th>
        <th>Data_venda</th>
        <th>Total_vendido</th>
        <th>Produto</th>
        <th colspan="4"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @vendas.each do |venda| %>
          <tr>
          <td><%= "%06d"%venda.id %></td>
          <td><%= venda.valor%></td>
          <td><%= venda.data_venda%></td>
          <td><%= venda.total_vendido%></td>
          <td><%= link_to 'Visualizar', venda %></td>
          <td><%= link_to 'Alterar', edit_venda_path(venda)%></td>   
          <td><%= link_to 'Excluir', venda, method: :delete,remote: true, class: 'remove-tag', data: { confirm: 'Deseja excluir o venda?' } %></td>
        </tr>
      <% end %>
        </tbody>
    </table>
  </div>
 
  </div>

